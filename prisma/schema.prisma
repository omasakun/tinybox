generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model EncryptedFile {
  id                     String   @id @default(uuid())
  encryptedMetadata      String
  metadataIv             String
  fileIv                 String
  encryptionKeyHash      String
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  @@index([encryptionKeyHash])
}
